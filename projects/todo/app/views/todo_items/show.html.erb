<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>jQuery UI Sortable - Default functionality</title>


  <script>
  $(function() {
    $( "#accordion" ).accordion({
      collapsible: true
    });
  });
  </script>

</head>


<body>
	<p id="notice"><%= notice %></p>



<p>
	<div class="showheader"></div>

   <%= link_to 'Back to Main List', list_path(@todo_item.list, @todo_item) %> |
 <%= link_to 'New Todo item', new_list_todo_item_path(@todo_item.list, @list) %> | 
<%= link_to 'Delete Todo Item', list_todo_item_path(@todo_item.list, @todo_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<br><br>
 
<div id="accordion">
  <h3>Title</h3>
  <div>
  <h3><%= @todo_item.title %></h3>
  <%= link_to 'Edit', edit_list_todo_item_path(@todo_item.list, @todo_item) %>
  </div>


  <h3>Current Status</h3>
  <div>
    <p><%= @todo_item.current_state %></p>
  </div>


  <h3>Description</h3>
  <div>
    <p><%= @todo_item.description %></p>
  </div>
  <h3>Last Update</h3>
  <div>
    <p>Updated <%= distance_of_time_in_words(@todo_item.created_at, @todo_item.updated_at) %> ago</p>
    
  </div>

    <h3>Comments</h3>
    <div>
    <p><%= @todo_item.comments %></p>
    
  </div>

</div>

</body>
</html>


